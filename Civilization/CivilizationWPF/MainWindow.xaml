<Window x:Class="CivilizationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Civilization" Height="650" Width="850">
    <Grid Height="600" Width="800" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Name="player" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800">
            <Button Name="end_turn" Content="End Turn" Click="endTurn" Height="20" Margin="626,0,0,4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" />
            <Button Content="Menu" Height="20" HorizontalAlignment="Right" Margin="0,0,9,4" Name="button1" VerticalAlignment="Bottom" Width="75" />
            <TextBlock Name="player_name" Height="23" HorizontalAlignment="Left" Margin="85,8,0,0"  Text="Aceltis" VerticalAlignment="Top" />
            <TextBlock Height="23" Margin="152,8,621,0" Name="civilization" Text="INFO" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="7,8,0,0" Name="interface1" Text="It's your turn," VerticalAlignment="Top" />
            <TextBlock Height="23" Margin="211,8,551,0" Name="city_number" Text="3 Cities" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="420,8,0,0" Name="boss_status" Text="Boss is alive" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="345,8,0,0" Name="teacher_number" Text="2 Teachers" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="271,8,0,0" Name="student_number" Text="4 Students" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="567,8,0,0" Name="turn_id" Text="Turn n°11" VerticalAlignment="Top" />
        </Grid>
        <Grid Name="map" Height="420" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0">
            <ScrollBar Name="up_down" Height="400" HorizontalAlignment="Right" VerticalAlignment="Top" Width="18" />
        </Grid>
        <Grid Name="information" Height="150" Width="600" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Hidden">
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="259,6,0,0" Name="city_name" Text="AceltiCity" VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left" Margin="259,27,0,100" Name="city_population" Text="5 Citizens" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="414,13,0,0" Name="pop_up_turns_left" Text="6 Turns until a new citizen is born" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="11,7,0,0" Name="iron" Text="3 iron available" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="11,27,0,0" Name="food" Text="5 food available" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="154,103,0,0" Name="timer_prod_boss" Text="5 turns" VerticalAlignment="Top" />
            <Button Content="Boss" Height="23" HorizontalAlignment="Left" Margin="135,71,0,0" Name="build_boss" VerticalAlignment="Top" Width="75" />
            <Button Content="Teacher" Height="23" HorizontalAlignment="Left" Margin="248,71,0,0" Name="build_teacher" VerticalAlignment="Top" Width="75" />
            <Button Content="Student" Height="23" HorizontalAlignment="Left" Margin="362,71,0,0" Name="build_student" VerticalAlignment="Top" Width="75" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="267,102,0,0" Name="timer_prod_teach" Text="4 turns" VerticalAlignment="Top" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="381,103,0,0" Name="timer_prod_stud" Text="3 turns" VerticalAlignment="Top" />
            <Button Content="Delete Town" Height="23" HorizontalAlignment="Right" Name="delete_city" VerticalAlignment="Bottom" Margin="0,0,2,2" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="11,74,0,0" Name="interface3" Text="Current production" VerticalAlignment="Top" />
        </Grid>
        <Grid Name="action" Height="150" Width="200" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="A city needs orders" Height="30" Width="200" HorizontalAlignment="Left" Name="button2" VerticalAlignment="Top"  />
        </Grid>
    </Grid>
</Window>
